{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["airbnb-base",
                "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "no-console": "off",
        "quotes": [
            "error",
            "double"
        ],
        "import/prefer-default-export": [
            "off"
        ],
        "no-param-reassign": [
            "off"
        ],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-use-before-define": [
            "off"
        ],
        "prefer-arrow-callback": [
            "off"
        ],
        "func-names": [
            "off"
        ],
        "arrow-body-style": [
            "off"
        ],
        "no-nested-ternary": [
            "off"
        ],
        "prefer-const": [
            "off"
        ]
    }
}